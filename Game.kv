<MainWindow>:
    name: "main"

    GridLayout:
        cols:1

        GridLayout:
            cols: 2
            Label:
                text: "User name: "

            TextInput:
                id: user_name
                multiline: False

            Label:
                text: "Password: "

            TextInput:
                id: passw
                multiline: False

        Button:
            text: "Submit"
            on_release:
                app.root.current = "second" if user_name.text == "tim" and passw.text == "tim" else "main"
                root.manager.transition.direction = "left"


<SecondWindow>:
    name: "second"
    GridLayout:
        cols: 1

        Button:
            size_hint: .2, .2
            text: "Guess DFA"
            on_release:
                app.root.current = "dfa_choose"
                root.manager.transition.direction = "right"

        Button:
            size_hint: .2, .2
            text: "Guess VPA"
            on_release:
                app.root.current = "vpa_choose"
                root.manager.transition.direction = "right"

